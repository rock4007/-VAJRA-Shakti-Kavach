{
  "name": "Official DET Practice Analysis by Arno",
  "description": "Record and export Duolingo English Test practice session data for analysis.",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Official DET Practice Analysis by Arno",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "permissions": ["storage", "downloads", "scripting", "activeTab"],
  "host_permissions": [
    "*://englishtest.duolingo.com/*",
    "*://*.supabase.co/*",
    "*://duolingo.goarno.io/*",
    "*://duolingo.goarno-local.io/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://englishtest.duolingo.com/*"],
      "js": ["page-hook.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["*://englishtest.duolingo.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://duolingo.goarno.io/*", "*://duolingo.goarno-local.io/*"],
      "js": ["arno-site-session.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
